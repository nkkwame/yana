# YANA Enterprises Environment Configuration

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/yana_db?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="24h"

# API Configuration
PORT=8001
NODE_ENV="development"

# Platform URLs
ENTERPRISES_URL="http://localhost:3000"
CARE_URL="http://localhost:3001"
MART_URL="http://localhost:3002"
LEARN_URL="http://localhost:3003"
STUDIOS_URL="http://localhost:3004"

# Email Configuration (for future use)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Redis Configuration (for future use)
REDIS_URL="redis://localhost:6379"

# File Upload Configuration
MAX_FILE_SIZE="10mb"
UPLOAD_DIR="./uploads"

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
